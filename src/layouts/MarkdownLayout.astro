---
import "../styles/global.css";

const { frontmatter } = Astro.props;

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";

function formatDate(date: Date) {
    const months = ["Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Jul",
        "Aug", "Sep", "Oct", "Nov", "Dec"];
    return `${months[date.getMonth()]} ${date.getDate()}, ${date.getFullYear()}`;
}
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="website of the GitHub user pes18fan"
        />
        <meta property="og:site_name" content="pes18fan" />
        <meta property="og:url" content="https://p18f.vercel.app/" />
        <meta property="og:image" content={frontmatter.image.url} />
        <meta property="og:title" content={frontmatter.title} />
        <meta
            property="og:description"
            content={frontmatter.description}
        />
        <meta property="og:type" content="website" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{frontmatter.title}</title>
    </head>

    <body>
        <main>
            <Navbar />

            <div class="container">
                <i>Written on {formatDate(frontmatter.pubDate)}.</i>
                <slot />
            </div>

            <Footer />
        </main>
    </body>
</html>

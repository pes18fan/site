<div class="projects">
    <Project 
        name="zen" 
        link="https://www.github.com/pes18fan/zen" 
        desc="dynamically typed programming language." />
    <Project
        name="notor"
        link="https://www.github.com/pes18fan/notor"
        desc="a note-taking terminal app." />
    <Project
        name="fonograf"
        link="https://www.github.com/pes18fan/fonograf"
        desc="a terminal-based music player in C++." />
    <Project
        name="libmanp"
        link="https://www.github.com/pes18fan/libmanp"
        desc="a desktop app to manage a list of books." />

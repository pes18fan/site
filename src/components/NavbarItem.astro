---
const { link, name } = Astro.props;
---

<li>
    {
        Astro.url.pathname == link ? (
            <span class="nav-list-item active">{name}</span>
        ) : (
            <a href={link} class="nav-list-item">
                {name}
            </a>
        )
    }
</li>

<style>
    .nav-list-item {
        color: var(--low-contrast-text);
        transition: color 300ms ease;
        position: relative;
        margin-right: 40px;
        cursor: pointer;
    }

    .nav-list-item::after {
        width: 0 !important;
    }

    .nav-list-item:hover {
        color: var(--accent-color);
    }

    .active {
        color: var(--text-color);
        cursor: auto;
    }

    .active:hover {
        color: var(--text-color);
    }
</style>

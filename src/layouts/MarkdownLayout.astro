---
import "../styles/global.css";
import { formatDate, getReadingTime } from "../utils/util.ts"

const { post } = Astro.props;

const frontmatter = post.data;
const minutesRead = getReadingTime(post.body);

import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="website of the GitHub user pes18fan"
        />
        <meta property="og:site_name" content="pes18fan" />
        <meta property="og:url" content="https://p18f.vercel.app/" />
        <meta property="og:image" content={frontmatter.image.url} />
        <meta property="og:title" content={frontmatter.title} />
        <meta
            property="og:description"
            content={frontmatter.description}
        />
        <meta property="og:type" content="website" />
        <link rel="icon" href="/favicon.ico" />
        <meta name="generator" content={Astro.generator} />
        <title>{frontmatter.title}</title>
    </head>

    <body>
        <main>
            <Navbar />

            <div class="container">
                <h1>{frontmatter.title}</h1>
                <i>Written on {formatDate(new Date(frontmatter.pubDate))} by {frontmatter.author}.</i></li>
                A {minutesRead} minute read.
                <slot />

                <!-- Comments, powered by utterances -->
                <script src="https://utteranc.es/client.js"
                    repo="pes18fan/site-comments"
                    issue-term="pathname"
                    theme="photon-dark"
                    crossorigin="anonymous"
                    async>
                </script>
            </div>

            <Footer />
        </main>
    </body>
</html>

<style>
    i {
        font-size: 14px;
    }
</style>
